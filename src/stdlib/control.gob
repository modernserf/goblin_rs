import [_loop_] := "native"

export let Control := [
  on {loop: do f}
    loop{: f}
  on {times: times do: do f}
    var i := 0
    loop{: {}
      if i >= times then return end
      f{: i} ? f{}
      set i{+: 1}
    }
  # this is maybe a bit too clever
  on {: do f}
    loop{: {}
      f{while}{:
        on {true} 1{do: ()} ? f{do}
        on {false} return ()
        on {some: value} f{do: value} ? f{do}
        on {none} return ()
        on {ok: value} f{do: value} ? f{do}
        on {error: err} return err
      }
    }
]